generator client {
provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = "postgresql://usuario:senha@localhost:5432/metas_wx48_shadow?schema=public"
}




model User {
id Int @id @default(autoincrement())
name String
email String @unique
password String
role String
metas Meta[]
}


model Meta {
id Int @id @default(autoincrement())
userId Int
date DateTime
metaDiaria Float @default(0)
vendasDia Float @default(0)
metaMensal Float @default(0)
vendasMes Float @default(0)
user User @relation(fields: [userId], references: [id])
@@index([userId, date])
}